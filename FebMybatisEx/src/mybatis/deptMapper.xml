<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="dept">
 	<!-- #{}에 들어가는 변수는 반드시 동일이름의 getter/setter가 생성되어 있어야 한다! 
 	세미콜론(;)은 절대 붙이지 않는다! -->
 	<insert id="addDept" parameterType="dept.dto.DeptDto">
 		insert into dept values(#{deptno}, #{dname}, #{loc})
 	</insert>
 	<!-- 선택한 부서의 위치 수정(hashmap사용) -->
 	<update id="modifyDept" parameterType="hashmap">
 		update dept set loc=#{loc} where deptno=#{deptno}
 	</update>
 	<!-- 해당부서번호의 부서삭제 -->
 	<delete id="delDept" parameterType="int">
 		delete from dept where deptno=#{deptno}
 	</delete>
 
 	<select id="deptAll" resultType="dept.dto.DeptDto">
 		select * from dept
 	</select>
 	<!-- 입력한 부서정보에 맞는 정보만 꺼내고 싶다! -->
 	<select id="findDept" resultType="dept.dto.DeptDto" parameterType="int">
 		select * from dept where deptno = #{deptno}
 	</select>
 	<!-- 전체 부서의 수 구하기 -->
 	<select id="count" resultType="int">
 		select count(*) from dept
 	</select>
 	
 	
 	
 </mapper>
package Airplane;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		
		Airplane1 a1 = new Airplane1();
		
		while(true) {
			int ap = scan.nextInt();
			if (ap == 1) {
				System.out.println("국내선 승선권을 발매합니다.");
				a1.setPlane(ap);
				break;
			}
			else if (ap == 2) {
				System.out.println("국제선 승선권을 발매합니다.");
				a1.setPlane(ap);
				break;
			}
			else System.out.print("다시 선택하세요.\n입력 > ");
		}
		
		a1.getTickets ();
		int tkn = scan.nextInt();
		
	}

}

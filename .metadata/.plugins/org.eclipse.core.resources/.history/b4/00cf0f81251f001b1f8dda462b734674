
public class AgeRainbow {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int age;
		age = 25;
		System.out.println("저는 " + age + "살 입니다.");
		//int age1 = 1000000000000; -->오류
		
		String[] rainbow = {
				"red", "orange", "yellow", "green", "blue", "navy", "purple"};
		for (int i = 0; i<rainbow.length; i++) {
			System.out.println("I like " + rainbow[i] + ".");
		}
		
		String[] lectures = new String[12];
		lectures[0] = "네트워크 데이터베이스 기초";
		lectures[1] = "JAVA 객체지향 프로그램";
		lectures[2] = "SQL 활용";
		lectures[3] = "화면구현";
		lectures[4] = "JSP 프로그래밍";
		lectures[5] = "Spring Framework";
		lectures[6] = "디바이스 드라이버 구현";
		lectures[7] = "펌웨어 구현";
		lectures[8] = "임베디드 애플리케이션 구현";
		lectures[9] = "프로젝트 주제 결정 및 기획";
		lectures[10] = "프로젝트 설계";
		lectures[11] = "프로젝트 구현";
		for (int i=0; i<lectures.length; i++) {
			System.out.println(i+1 + "주차에는 " + lectures[i] + "를 배웁니다.");
		}		//i+1을 ++i로 작성하면 2번씩 증감하여 1, 3, 5, 7, 9만 출력된다.
		
		System.out.println("\n" + "test 점수");
		
		int test[] = {11, 22, 33, 44};
		int sum = 0;
		for (int i=0; i<test.length; i++) {
			sum += test[i];		//0+11 -> 11+22 -> 33+44 계산
		}
		System.out.println("총합 : " + sum);
		System.out.println("평균 : " + sum/test.length);
		

	}

}


public class Date {
	private int year = 1970;
	private int month = 1;
	private int day = 1;
	
	
	public int getYear() {
		return year;
	}

	public void setYear(int yy) {
		if (yy < 1970)
			yy = year;	//잘못된 값일 경우 초기값 셋
		year = yy;	
	}

	public int getMonth() {
		return month;
	}

	public void setMonth(int mm) {
		if (mm <= 0 || mm > 12)	//둘중하나충족하면(=오류값)
			mm = month;		//잘못된 값일 경우 초기값 셋
		month = mm;
	}

	public int getDay() {
		return day;
	}
	
	public void setDay(int dd) {
		int [] days = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
		if (dd <= 0 || dd > days[month - 1]) 
			dd = day;
		day = dd;
	}
	
	
	public Date (int yy, int mm, int dd) {		//생성자
		setYear(yy);
		setMonth(mm);
		setDay(dd);
	}
	
	public void printDate() {
		System.out.printf("%4d년 %2d월 %2d일", year, month, day);
	}
}










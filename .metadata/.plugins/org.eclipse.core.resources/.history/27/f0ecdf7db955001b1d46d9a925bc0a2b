<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<!-- 선언문(declaration tag) !기호 사용
	선언된 변수는 JSP(서블릿클래스) 내에서 자유롭게 사용가능 -->
<%!
   String name = "jeeyoung";
   public String getName(){ return name;}
%>    

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>선언문 연습</title>
  </head>
  <body>
  	<!-- 값을 출력하기 위한 태그(=기호 사용) -->
      <h1>안녕하세요 <%= getName() %>님!!</h1>
  </body>
</html>

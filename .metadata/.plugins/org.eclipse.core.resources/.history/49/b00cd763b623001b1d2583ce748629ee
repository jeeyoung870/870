
public class Employee {
	private String name = "김자바";
	private String level = "사원";
	private int income = 300;
	private String number = "000-0000-0000";
	
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getLevel() {
		return level;
	}
	public void setLevel(String level) {
		String [] levels = {"사원", "대리", "과장", "부장"};
		for (int i = 0; i < levels.length; ++i)
			if(level == levels[i])
				level = this.level;
		this.level = level;
	}
	public int getIncome() {
		return income;
	}
	public void setIncome(int income) {
		this.income = income;
	}
	public String getNumber() {
		return number;
	}
	public void setNumber(String number) {
		this.number = number;
	}
	
	public void setEmployee(String n, String lv, int ic, String num) {
		setName(n); setLevel(lv); setIncome(ic); setNumber(num);
	}
	
	public void printEmployee() {
		System.out.printf("이름 : %s\n직급 : %s\n월급 : %d\n전화번호 : %s\n");
	}

}

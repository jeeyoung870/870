package Airplane;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		
		Airplane1 a1 = new Airplane1();
		
		while(true) {
			int tk = scan.nextInt();
			if (tk == Airplane1.LOCAL) {
				System.out.println("국내선 승선권을 발매합니다.");
				a1.GetTickets ();
				break;
			}
			else if (tk == Airplane1.ABROAD) {
				System.out.println("국제선 승선권을 발매합니다.");
				a1.GetTickets ();
				break;
			}
			else System.out.print("다시 선택하세요.\n입력 > ");
		}
		
		int tkn = scan.nextInt();
		a1.seat(tkn);

	}

}


public class Date {
	private int year = 1970;
	private int month;
	private int day = 1;
	
	public Date() {
		year = 1970;
		month = 1;
		day = 1;
	}
	
	public Date (int yy, int mm, int dd) {
		setYear(yy);
		setMonth(mm);
		setDay(dd);
	}
	
	public void printDate() {
		System.out.printf("%4d년 %2d월 %2d일", year, month, day);
	}
	
	public int getYear() {
		return year;
	}

	public void setYear(int yy) {
		if (yy < 1970)
			yy = year;
		year = yy;	//초기값 셋
	}

	public int getMonth() {
		return month;
	}

	public void setMonth(int mm) {
		if (mm >= 0 && mm < 12)
			month = mm;
		mm = month;
	}

	public void setDay(int dd) {
		int [] days = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
		boolean b = dd <= days[month-1];
		if (b == true) {
			this.day = dd;
		}dd = day;
	}
	
	public int getDay() {
		return day;
	}
}










	<!-- 메일전송 빈설정 -->
	<bean id="mailSender"
		class="org.springframework.mail.javamail.JavaMailSenderImpl">
    <property name="host" value="smtp.gmail.com" />
    <property name="port" value="587" /><!-- 안되면 465 or 25 -->
    <property name="username" value="mailniaad@gmail.com" />
    <property name="password" value="dlzmfflqtm1!@" />
    <property name="defaultEncoding" value="utf-8" />
    <property name="javaMailProperties">
        <props>
            <prop key="mail.transport.protocol">smtp</prop>
            <prop key="mail.smtp.auth">true</prop>
            <prop key="mail.smtp.starttls.enable">true</prop>
            <prop key="mail.debug">true</prop>
        </props>
    </property>
	</bean>
	
	<!-- xml변환을 위한 빈설정(view클래스를 대신함) -->
	<bean id="pageXmlReport"
		class="org.springframework.web.servlet.view.xml.MarshallingView">
		<property name="marshaller" ref="marshaller" />
		<property name="modelKey" value="report" />
	</bean>

	<bean id="marshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
		<property name="classesToBeBound">
			<list><value>download.model.PageRankReport</value>
			</list>
		</property>
	</bean>
	
	<!-- Json변환을 위한 빈설정 -->
	<bean
		class="org.springframework.web.servlet.view.json.MappingJackson2JsonView"
		id="pageJsonReport" />
	
	
	
	<!-- Tiles3 사용 설정 viewResolver -->
	<bean id="tilesviewResolver"
		class="org.springframework.web.servlet.view.tiles3.TilesViewResolver" />
	<bean id="tilesConfigurer"
		class="org.springframework.web.servlet.view.tiles3.TilesConfigurer">
		<property name="definitions">
			<list>
				<value>/WEB-INF/tiles_def/tilesdef.xml</value>	<!-- 설정파일경로 -->
			</list>
		</property>
		<property name="preparerFactoryClass" value="org.springframework.web.servlet.view.tiles3.SpringBeanPreparerFactory"/>
	</bean>
	
	<!-- tilesdef.xml에서 preparer속성값으로 id지정할 빈 -->
	<bean id="menuPreparer" class="view.tiles.MenuPreparer" />
	
	
	
	
	
	<!-- 다수의 ViewResolver 설정가능 -->
	<!-- BeanNameViewResolver는 리턴되는 viewname과 같은 빈이름의 뷰파일을 연결시켜줌@Component("뷰이름") -->
	<bean id="viewResolver1" class="org.springframework.web.servlet.view.BeanNameViewResolver"/>

	<!-- /WEB-INF/view/요청명.jsp 
	InternalResourceViewResolver는 ViewResolver중 가장 마지막에 선언해야 함-->
	<bean id="viewResolver2"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />
	</bean>
	<!-- /WEB-INF/view/order/orderCompletion.jsp -->

</beans>


<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	<!-- <bean id="helloController"
		class="spring.controller.HelloController" /> -->
	<context:annotation-config/>
		<context:component-scan base-package="spring.*, movie.*, view.*"/>
		<context:component-scan base-package="download.*"/>
		
	
	<!-- @DateTimeFormat 어노테이션 사용하기 위한 mvc 설정 -->
	<mvc:annotation-driven>
		<!-- @ResponseBody 한글깨짐방지 -->
		<mvc:message-converters>
			<bean class="org.springframework.http.converter.StringHttpMessageConverter">
				<property name="supportedMediaTypes">
					<list><value>text/html;charset=UTF-8</value></list>
				</property>
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>
	
	
	<!-- 국제화(언어 변경)을 위한 빈 설정 -->
	<bean id="localeResolver"
		class="org.springframework.web.servlet.i18n.SessionLocaleResolver" />
	
	<mvc:interceptors>
		<!-- <mvc:interceptor>
			<mvc:mapping path="/event/list.do" />
			<bean class="spring.interceptor.EventExpirationCheckInterceptor" />
		</mvc:interceptor> -->
		<!-- 국제화 인터셉터 -->
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor" 
			p:paramName="language" />
		</mvc:interceptor>
	</mvc:interceptors>
	
	
	<!-- authenticator 빈을 LoginController객체 속성으로 추가 -->

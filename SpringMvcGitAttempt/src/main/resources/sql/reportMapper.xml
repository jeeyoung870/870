<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reportMapper">
<!-- 									임시 항목들 (경고 받았는지는 디폴트로?)
	<insert id="reportInsert" parameterType="map">
		insert into report 
		(r_number, reported_user, r_content, reporter_user, r_reg_date )
		values 
		(#{r_number}, #{reported_user}, #{r_content}, #{reporter_user},	#{r_reg_date})
	</insert>
	 -->
	 
	<!-- 신고글 목록 조회 -->
	<select id="reportSelect" resultType="hils.Report.Model.ReportDto">
		select * from report
	</select>
	
	<!-- 신고글 삭제 -->
	<delete id="deleteReport">
		delete from report where r_number = #{r_number}
	</delete>

</mapper>
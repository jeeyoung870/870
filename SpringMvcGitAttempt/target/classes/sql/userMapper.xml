<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="manageUserMapper">

  	<!-- 회원 목록 조회 (일반회원 소셜회원 전부 합쳐서 출력) -->
	<select id="userSelect" resultType="hils.Register.Model.RegisterDto">
		select user_id, auth, regi_date from users_register order by regi_date
	</select>

	<!-- 회원 강제 탈퇴 -->
	<delete id="userDelete">
		delete from users_register where user_id = #{user_id}
	</delete>
</mapper>